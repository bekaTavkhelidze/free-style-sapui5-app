<mvc:View
    controllerName="freestylesapui5app.controller.ORProducts"
    xmlns="sap.uxap"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:m="sap.m"
    xmlns:forms="sap.ui.layout.form"
>
    <ObjectPageLayout
        id="ObjectPageLayout"
        enableLazyLoading="true"
        useIconTabBar="true"
        showTitleInHeaderContent="true"
        upperCaseAnchorBar="false">
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <expandedHeading>
                    <m:Title text="{i18n>ORTitle}" wrapping="true" />
                </expandedHeading>

                <snappedHeading>
                    <m:Title text="{i18n>ORTitle}" wrapping="true" />
                </snappedHeading>

                <expandedContent>
                    <m:Text text="{Name}" />
                </expandedContent>

                <snappedContent>
                    <m:Text text="{Name}" />
                </snappedContent>

                <snappedTitleOnMobile>
                    <m:Title text="{Name}" />
                </snappedTitleOnMobile>

                <actions>
                    <m:Button text="{i18n>EditBtn}" type="Emphasized" />
                    <m:Button type="Transparent" text="{i18n>DeleteBtn}" />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>


        <headerContent>
            <m:FlexBox wrap="Wrap" fitContainer="true">
                <m:Avatar class="sapUiSmallMarginEnd"
                    src="./test-resources/sap/uxap/images/imageID_275314.png" displaySize="L" />

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:Link text="{PhoneNumber}" />
                    <m:Link text="{Email}" />
                </layout:VerticalLayout>

                <layout:HorizontalLayout class="sapUiSmallMarginBeginEnd">
                    <m:Image src="./test-resources/sap/uxap/images/linkedin.png" />
                    <m:Image src="./test-resources/sap/uxap/images/Twitter.png"
                        class="sapUiSmallMarginBegin" />
                </layout:HorizontalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <m:Label text="{i18n>addressFilterLabel}: {Address}" />
                </layout:VerticalLayout>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection
                titleUppercase="true"
                id="storeDetails"
                title="{i18n>StoreDetails}">
                <subSections>
                    <ObjectPageSubSection id="goalsSS1" titleUppercase="true">
                        <forms:SimpleForm class="sapUxAPObjectPageSubSectionAlignContent">
                            <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                <m:FlexBox gap="10px" alignItems="Center">
                                    <m:Label labelFor="StoreName" text="{i18n>nameColumnTitle}:" />
                                    <m:Input value="{Name}" id="StoreName" />
                                </m:FlexBox>
                            </layout:VerticalLayout>
                            <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                <m:FlexBox gap="10px" alignItems="Center">
                                    <m:Label labelFor="phoneNumber" text="{i18n>phoneColumnTitle}:" />
                                    <m:Input value="{PhoneNumber}" id="phoneNumber" />
                                </m:FlexBox>
                                <m:FlexBox gap="10px" alignItems="Center">
                                    <m:Label labelFor="Email" text="{i18n>emailColumnTitle}:" />
                                    <m:Input value="{Email}" id="Email" />
                                </m:FlexBox>
                            </layout:VerticalLayout>
                            <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                <m:FlexBox gap="10px" alignItems="Center">
                                    <m:Label labelFor="Address" text="{i18n>addressColumnTitle}" />
                                    <m:Input value="{Address}" id="Address" />
                                </m:FlexBox>
                                <m:FlexBox gap="10px" alignItems="Center">
                                    <m:Label labelFor="FloorArea" text="{i18n>floorArea}:" />
                                    <m:Input value="{FloorArea}" id="FloorArea" />
                                </m:FlexBox>
                            </layout:VerticalLayout>
                        </forms:SimpleForm>

                    </ObjectPageSubSection>
                    <ObjectPageSubSection
                        id="productDetails"
                        titleUppercase="true"
                        title="{i18n>AssemblyOptions}">
                        <m:Table
                            items="{Products}"
                            id="productsTable"
                            autoPopinMode="true"
                            width="auto">
                            <m:headerToolbar>
                                <m:OverflowToolbar>
                                    <m:content>
                                        <m:Title text="{i18n>nameTableTitle}" level="H2" />
                                        <m:ToolbarSpacer />
                                        <m:SearchField search="onSearchProduct"
                                            placeholder="{i18n>search}" width="200px" />
                                        <m:Button text="{i18n>addStore}" type="Emphasized" />
                                        <m:Button text="{i18n>deleteStore}" type="Default" />
                                    </m:content>
                                </m:OverflowToolbar>
                            </m:headerToolbar>
                            <m:columns>
                                <m:Column>
                                    <m:Text text="{i18n>IdColumnTitle}" />
                                </m:Column>
                                <m:Column>
                                    <m:Text text="{i18n>nameColumnTitle}" />
                                </m:Column>
                                <m:Column>
                                    <m:Text text="{i18n>StatusColumnTitle}" />
                                </m:Column>
                                <m:Column>
                                    <m:Text text="{i18n>PriceColumn}" />
                                </m:Column>
                            </m:columns>
                            <m:ColumnListItem type="Navigation">
                                <m:cells>
                                    <m:Text text="{ID}" />
                                </m:cells>
                                <m:cells>
                                    <m:Text text="{Name}" />
                                </m:cells>
                                <m:cells>
                                    <m:Text text="{Status}" />
                                </m:cells>
                                <m:cells>
                                    <m:Text text="{Price_amount}USD" />
                                </m:cells>
                            </m:ColumnListItem>
                        </m:Table>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                titleUppercase="false"
                id="connections">
                <subSections>
                    <ObjectPageSubSection
                        id="connectionsSS1"
                        titleUppercase="false"
                        title="{i18n>storeCreateDetail}">
                        <blocks>
                            <forms:SimpleForm class="sapUxAPObjectPageSubSectionAlignContent">
                                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                    <m:Label labelFor="createdAt" text="{i18n>createdAt}:" />
                                    <m:Text id="createdAt" text="{createdAt}" />
                                </layout:VerticalLayout>
                                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                    <m:Label labelFor="modifyTime" text="{i18n>modifyTime}:" />
                                    <m:Text text="{modifiedAt}" id="modifyTime" />
                                    <m:Label labelFor="Established" text="{i18n>Established}:" />
                                    <m:Text text="{Established}" id="Established" />
                                </layout:VerticalLayout>
                            </forms:SimpleForm>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>