<mvc:View
    controllerName="freestylesapui5app.controller.ListReport"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:mdc="sap.ui.mdc"
    xmlns:mdct="sap.ui.mdc.table">
    <f:DynamicPage id="ListReportPage" preserveHeaderStateOnScroll="true" headerExpanded="true"
        toggleHeaderOnTitleClick="true">
        <f:title>
            <f:DynamicPageTitle id="dynamicPageTitleId">
                <f:heading>
                    <Title text="Product List Report" level="H2" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>
                    <fb:FilterBar basicSearch="Search" id="filterbar" persistencyKey="myPersKey"
                        useToolbar="false"
                        search="onSearch"
                        filterChange=".onFilterChange"
                        afterVariantLoad=".onAfterVariantLoad">
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="SearchName"
                                groupName="Group1"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <SearchField placeholder="Search" />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem name="Email" label="Email:"
                                groupName="Group1"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <MultiInput
                                        name="Email"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem name="PhoneNumber" label="PhoneNumber:"
                                groupName="Group1" visibleInFilterBar="true">
                                <fb:control>
                                    <MultiInput
                                        name="PhoneNumber"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem name="Address" label="Address:"
                                groupName="Group1"
                                visibleInFilterBar="true">
                                <fb:control>
                                    <MultiInput
                                        name="Address"
                                    />

                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>

                </f:content>

            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table items="{Stores>/}">
                <columns>
                    <Column>
                        <Text text="Address" />
                    </Column>
                    <Column>
                        <Text text="Name" />
                    </Column>
                    <Column>
                        <Text text="Email" />
                    </Column>
                    <Column>
                        <Text text="PhoneNumber" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation">
                        <cells>
                            <Text text="{Stores>Address}" />
                        </cells>
                        <cells>
                            <Text text="{Stores>Name}" />
                        </cells>
                        <cells>
                            <Text text="{Stores>Email}" />
                        </cells>
                        <cells>
                            <Text text="{Stores>PhoneNumber}" />
                        </cells>
                    </ColumnListItem>

                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>