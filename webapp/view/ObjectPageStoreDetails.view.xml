<mvc:View controllerName="freestylesapui5app.controller.ObjectPageStoreDetails"
    xmlns:uxap="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:forms="sap.ui.layout.form">
    <uxap:ObjectPageLayout id="idStoreObjectPageLayout" showFooter="{isEditModeActive>/isEditModeActive}" enableLazyLoading="true" useIconTabBar="true" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>

                <uxap:expandedHeading>
                    <Breadcrumbs currentLocationText="{i18n>storeDetails}">
                        <Link press="onStoreLinkGoBackToStoresListReportPress" text="{i18n>store}" />
                    </Breadcrumbs>
                </uxap:expandedHeading>

                <uxap:snappedHeading>
                    <Title text="{i18n>objectPageTitle}" wrapping="true" />
                </uxap:snappedHeading>

                <uxap:expandedContent>
                    <Text text="{Name}" />
                </uxap:expandedContent>

                <uxap:snappedContent>
                    <Text text="{Name}" />
                </uxap:snappedContent>

                <uxap:snappedTitleOnMobile>
                    <Title text="{Name}" />
                </uxap:snappedTitleOnMobile>

                <uxap:actions>
                    <Button text="{i18n>editBtn}" type="Emphasized" press="onEditButtonPress" enabled="{= !${isEditModeActive>/isEditModeActive} }" />
                    <Button type="Transparent" text="invokeImportFunction" press="onInvokeImportFunctionButtonPress" enabled="{= !${isEditModeActive>/isEditModeActive} }"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>


        <uxap:headerContent>
            <FlexBox wrap="Wrap" fitContainer="true">
                <Avatar displaySize="XL" backgroundColor="Transparent" />

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Link text="{PhoneNumber}" />
                    <Link text="{Email}" />
                </layout:VerticalLayout>


                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Label labelFor="addressHeader" showColon="true" text="{i18n>addressFilterLabel} " />
                    <Text text="{Address}" id="idAddressHeaderText"></Text>
                </layout:VerticalLayout>
            </FlexBox>
        </uxap:headerContent>
        <uxap:sections>
            <uxap:ObjectPageSection titleUppercase="true" id="idStoreDetailsObjectPageSection" title="{i18n>storeDetails}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="idStoreDetailsObjectPageSubSection" titleUppercase="true">
                        <forms:SimpleForm class="sapUxAPObjectPageSubSectionAlignContent">
                            <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                <Label labelFor="idNameStoreInput" showColon="true" text="{i18n>nameColumnTitle}" />
                                <Input value="{Name}" id="idNameStoreInput" valueLiveUpdate="true" valueState="{= ${Name} ? 'None' : 'Error'}" editable="{isEditModeActive>/isEditModeActive}" />
                            </layout:VerticalLayout>
                            <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                <Label showColon="true" labelFor="idPhoneNumberInput" text="{i18n>phoneColumnTitle}" />
                                <Input value="{PhoneNumber}" id="idPhoneNumberInput" valueLiveUpdate="true" valueState="{= ${PhoneNumber} ? 'None' : 'Error'}" editable="{isEditModeActive>/isEditModeActive}" />
                                <Label labelFor="idEmailInput" showColon="true" text="{i18n>emailColumnTitle}" />
                                <Input value="{Email}" id="idEmailInput" valueLiveUpdate="true" valueState="{= ${Email} ? 'None' : 'Error'}" editable="{isEditModeActive>/isEditModeActive}" />
                            </layout:VerticalLayout>
                            <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">

                                <Label labelFor="idAddressInput" showColon="true" text="{i18n>addressColumnTitle}" />
                                <Input value="{Address}" id="idAddressInput" valueLiveUpdate="true" valueState="{= ${Address} ? 'None' : 'Error'}" editable="{isEditModeActive>/isEditModeActive}" />
                                <Label labelFor="idFloorAreaText" showColon="true" text="{i18n>floorArea}" />
                                <Input value="{FloorArea}" id="idFloorAreaInput" valueLiveUpdate="true" valueState="{= ${FloorArea} ? 'None' : 'Error'}" editable="{isEditModeActive>/isEditModeActive}" />
                            </layout:VerticalLayout>
                        </forms:SimpleForm>
                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection id="idProductDetailsObjectPageSubSection" titleUppercase="true" title="{i18n>assemblyOptions}">
                        <Table items="{Products}" id="idProductsTable" autoPopinMode="true" mode="SingleSelectLeft" width="auto">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <Title text="{i18n>nameTableTitle}" level="H2" />
                                        <ToolbarSpacer />
                                        <SearchField search="onSearchFieldProductSearch" placeholder="{i18n>search}" width="200px" />
                                        <Button text="{i18n>addStore}" type="Emphasized" press="onAddButtonProductPress" enabled="{= !${isEditModeActive>/isEditModeActive} }" />
                                        <Button text="{i18n>deleteStore}" type="Default" press="onDeleteButtonProductPress" enabled="{= !${isEditModeActive>/isEditModeActive} }" />
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column>
                                    <Text text="{i18n>madeInColumnTitle}" visible="{!isEditModeActive>isCreateModeActive}"/>
                                </Column>
                                <Column>
                                    <Text text="{i18n>nameColumnTitle}" />
                                </Column>
                                <Column>
                                    <Text text="{i18n>statusColumnTitle}" />
                                </Column>
                                <Column>
                                    <Text text="{i18n>priceColumn}" />
                                </Column>
                            </columns>
                            <ColumnListItem type="Navigation" press="onColumnListItemGoToProductDetailChartPress">
                                <cells>
                                    <VBox >
                                        <Text text="{MadeIn}" visible="{= !${isEditModeActive>/isEditModeActive} }" />
                                        <Input value="{MadeIn}" valueLiveUpdate="true" visible="{isEditModeActive>/isEditModeActive}" valueState="{= ${MadeIn} ? 'None' : 'Error'}" />
                                    </VBox>
                                </cells>
                                <cells>
                                    <VBox >
                                        <Text text="{Name}" visible="{= !${isEditModeActive>/isEditModeActive} }" />
                                        <Input value="{Name}" valueLiveUpdate="true" visible="{isEditModeActive>/isEditModeActive}" valueState="{= ${Name} ? 'None' : 'Error'}"/>
                                    </VBox>
                                </cells>
                                <cells>
                                    <VBox >
                                        <Text text="{Status}" visible="{= !${isEditModeActive>/isEditModeActive} }" />
                                        <Select selectedKey="{Status}" visible="{isEditModeActive>/isEditModeActive}">
                                            <core:Item key="STORAGE" text="Storage" />
                                            <core:Item key="OUT_OF_STOCK" text="Out of Stock" />
                                            <core:Item key="OK" text="OK" />
                                        </Select>
                                    </VBox>
                                </cells>
                                <cells>
                                    <FlexBox direction="Row" alignItems="Center">
                                        <VBox >
                                            <Input value="{Price_amount}" type="Number" visible="{isEditModeActive>/isEditModeActive}" valueState="{= ${Price_amount} ? 'None' : 'Error'}"/>
                                            <Text text="{Price_amount}" visible="{= !${isEditModeActive>/isEditModeActive} }" />
                                        </VBox>
                                        <Text text="{Price_currency}" />
                                    </FlexBox>
                                </cells>
                            </ColumnListItem>
                        </Table>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection titleUppercase="false" id="idCreateDetailsObjectPageSection">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="idCreateDetailsObjectPageSubSection" titleUppercase="false" title="{i18n>storeCreateDetail}">
                        <uxap:blocks>
                            <forms:SimpleForm class="sapUxAPObjectPageSubSectionAlignContent">
                                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                    <Label labelFor="idCreatedAtText" showColon="true" text="{i18n>createdAt}" />
                                    <Text id="idCreatedAtText" text="{createdAt}" />
                                </layout:VerticalLayout>
                                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                    <Label labelFor="idModifiedAtText" showColon="true" text="{i18n>modifyTime}" />
                                    <Text text="{modifiedAt}" id="idModifiedAtText" />
                                    <Label labelFor="idEstablishedText" text="{i18n>established}" showColon="true" />
                                    <Text text="{Established}" id="idEstablishedText" />
                                </layout:VerticalLayout>
                            </forms:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Accept" text="{i18n>save}" press="onSaveButtonPress"/>
                <Button type="Reject" text="{i18n>cancel}" press="onCancelButtonPress"/>
            </OverflowToolbar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>