<mvc:View
    controllerName="freestylesapui5app.controller.ObjectPageStoreDetails"
    xmlns:uxap="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:forms="sap.ui.layout.form"
>
    <uxap:ObjectPageLayout
        id="idStoreObjectPageLayout"
        enableLazyLoading="true"
        useIconTabBar="true"
        showTitleInHeaderContent="true"
        upperCaseAnchorBar="false">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>

                <uxap:expandedHeading>
                    <Breadcrumbs currentLocationText="{i18n>storeDetails}">
                        <Link press="onStoreLinkGoBackToStoresListReportPress" text="{i18n>store}" />
                    </Breadcrumbs>
                </uxap:expandedHeading>

                <uxap:snappedHeading>
                    <Title text="{i18n>objectPageTitle}" wrapping="true" />
                </uxap:snappedHeading>

                <uxap:expandedContent>
                    <Text text="{Name}" />
                </uxap:expandedContent>

                <uxap:snappedContent>
                    <Text text="{Name}" />
                </uxap:snappedContent>

                <uxap:snappedTitleOnMobile>
                    <Title text="{Name}" />
                </uxap:snappedTitleOnMobile>

                <uxap:actions>
                    <Button text="{i18n>editBtn}" type="Emphasized" />
                    <Button type="Transparent" text="{i18n>deleteBtn}" />
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>


        <uxap:headerContent>
            <FlexBox wrap="Wrap" fitContainer="true">
                <Avatar
                    displaySize="XL"
                    backgroundColor="Transparent"
                />

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Link text="{PhoneNumber}" />
                    <Link text="{Email}" />
                </layout:VerticalLayout>


                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Label labelFor="addressHeader" showColon="true"
                        text="{i18n>addressFilterLabel} " />
                    <Text text="{Address}" id="idAddressHeaderText"></Text>
                </layout:VerticalLayout>
            </FlexBox>
        </uxap:headerContent>

        <uxap:sections>
            <uxap:ObjectPageSection
                titleUppercase="true"
                id="idStoreDetailsObjectPageSection"
                title="{i18n>storeDetails}">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection id="idStoreDetailsObjectPageSubSection"
                        titleUppercase="true">
                        <forms:SimpleForm class="sapUxAPObjectPageSubSectionAlignContent">
                            <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                <FlexBox alignItems="Center">
                                    <Label labelFor="idNameStoreText" showColon="true"
                                        text="{i18n>nameColumnTitle}" />
                                    <!-- <Input value="{Name}" id="storeName" /> -->
                                    <Text text="{Name}" id="idNameStoreText" />
                                </FlexBox>
                            </layout:VerticalLayout>
                            <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                <FlexBox alignItems="Center">
                                    <Label showColon="true" labelFor="idPhoneNumberText"
                                        text="{i18n>phoneColumnTitle}" />
                                    <!-- <Input value="{PhoneNumber}" id="phoneNumber" /> -->
                                    <Text text="{PhoneNumber}" id="idPhoneNumberText" />
                                </FlexBox>
                                <FlexBox alignItems="Center">
                                    <Label labelFor="idEmailText" showColon="true"
                                        text="{i18n>emailColumnTitle}" />
                                    <!-- <Input value="{Email}" id="email" /> -->
                                    <Text text="{Email}" id="idEmailText" />
                                </FlexBox>
                            </layout:VerticalLayout>
                            <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                <FlexBox alignItems="Center">
                                    <Label labelFor="idAddressText" showColon="true"
                                        text="{i18n>addressColumnTitle}" />
                                    <!-- <Input value="{Address}" id="address" /> -->
                                    <Text text="{Address}" id="idAddressText" />
                                </FlexBox>
                                <FlexBox alignItems="Center">
                                    <Label labelFor="idFloorAreaText" showColon="true"
                                        text="{i18n>floorArea}" />
                                    <!-- <Input value="{FloorArea}" id="floorArea" /> -->
                                    <Text text="{FloorArea}" id="idFloorAreaText" />
                                </FlexBox>
                            </layout:VerticalLayout>
                        </forms:SimpleForm>

                    </uxap:ObjectPageSubSection>
                    <uxap:ObjectPageSubSection
                        id="idProductDetailsObjectPageSubSection"
                        titleUppercase="true"
                        title="{i18n>assemblyOptions}">
                        <Table
                            items="{Products}"
                            id="idProductsTable"
                            autoPopinMode="true"
                            mode="SingleSelectLeft"
                            width="auto">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <content>
                                        <Title text="{i18n>nameTableTitle}" level="H2" />
                                        <ToolbarSpacer />
                                        <SearchField search="onSearchFieldProductSearch"
                                            placeholder="{i18n>search}" width="200px" />
                                        <Button text="{i18n>addStore}" type="Emphasized" />
                                        <Button text="{i18n>deleteStore}" type="Default" />
                                    </content>
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column>
                                    <Text text="{i18n>idColumnTitle}" />
                                </Column>
                                <Column>
                                    <Text text="{i18n>nameColumnTitle}" />
                                </Column>
                                <Column>
                                    <Text text="{i18n>statusColumnTitle}" />
                                </Column>
                                <Column>
                                    <Text text="{i18n>priceColumn}" />
                                </Column>
                            </columns>
                            <ColumnListItem
                                type="Navigation"
                                press="onColumnListItemGoToProductDetailChartPress">
                                <cells>
                                    <Text text="{ID}" />
                                </cells>
                                <cells>
                                    <Text text="{Name}" />
                                </cells>
                                <cells>
                                    <Text text="{Status}" />
                                </cells>
                                <cells>
                                    <FlexBox direction="Row">
                                        <Text text="{Price_amount}" />
                                        <Text text="{Price_currency}" />
                                    </FlexBox>
                                </cells>
                            </ColumnListItem>
                        </Table>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                titleUppercase="false"
                id="idCreateDetailsObjectPageSection">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        id="idCreateDetailsObjectPageSubSection"
                        titleUppercase="false"
                        title="{i18n>storeCreateDetail}">
                        <uxap:blocks>
                            <forms:SimpleForm class="sapUxAPObjectPageSubSectionAlignContent">
                                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                    <Label
                                        labelFor="idCreatedAtText"
                                        showColon="true"
                                        text="{i18n>createdAt}" />
                                    <Text id="idCreatedAtText" text="{createdAt}" />
                                </layout:VerticalLayout>
                                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                                    <Label
                                        labelFor="idModifiedAtText"
                                        showColon="true"
                                        text="{i18n>modifyTime}" />
                                    <Text text="{modifiedAt}" id="idModifiedAtText" />
                                    <Label
                                        labelFor="idEstablishedText"
                                        text="{i18n>established}"
                                        showColon="true" />
                                    <Text text="{Established}" id="idEstablishedText" />
                                </layout:VerticalLayout>
                            </forms:SimpleForm>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>