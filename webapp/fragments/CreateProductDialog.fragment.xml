<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:forms="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog id="idCreateProductDialog">
        <content>
            <forms:SimpleForm>
                <Label labelFor="idNameCreateProduct" required="true" text="{i18n>nameColumnTitle}" showColon="true" />
                <Input value="{Name}" id='idNameCreateProduct' valueState="{= ${Name} ? 'None' : 'Error'}" valueLiveUpdate="true" />
                <Label labelFor="idStatusCreate" required="true" text="{i18n>statusColumnTitle}" showColon="true" />

                <Select id="idStatusCreateSelect" selectedItem="OK" selectedKey="{Status}">
                    <items>
                        <core:Item key="" text="{i18n>selectStatus}" />
                        <core:Item key="OK" text="OK" />
                        <core:Item key="STORAGE" text="Storage" />
                        <core:Item key="OUT_OF_STOCK" text="Out of Stock" />

                    </items>
                </Select>

                <Label labelFor="idMadeInCreate" required="true" text="{i18n>madeInColumnTitle}" showColon="true" />
                <Input id='idMadeInCreate' valueLiveUpdate="true" value="{MadeIn}" valueState="{= ${MadeIn} ? 'None' : 'Error'}" />
                <Label labelFor="idRatingCreate" required="true" text="{i18n>ratingColumnTitle}" showColon="true" />
                <Input id='idRatingCreate' type="Number" value="{
                                path: 'Rating',
                                type: 'sap.ui.model.type.Integer',
                                constraints: {
                                  minimum: 0,
                                 maximum: 5
                                }
                            }" valueState="{= ${Rating} ? 'None' : 'Error'}" />
                <Label labelFor="idAddressCreateText" required="true" text="{i18n>priceColumn}" showColon="true" />
                <Input id='idPriceCreate' type="Number" value="{Price_amount}" valueState="{= ${Price_amount} ? 'None' : 'Error'}"/>
            </forms:SimpleForm>
        </content>
        <beginButton>
            <Button text="{i18n>create}" press="onCreateButtonProductPress"></Button>
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onCancelButtonProductPress" />
        </endButton>
    </Dialog>
</c:FragmentDefinition>