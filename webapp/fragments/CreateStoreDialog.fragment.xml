<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:forms="sap.ui.layout.form">
    <Dialog id="idCreateStoreDialog" title="Create Store">
        <content>
            <forms:SimpleForm>
                <Label labelFor="idNameCreateText" text="{i18n>nameColumnTitle}" showColon="true" />
                <Input id='idNameCreateText' value="{createStory>/Name}"/>
                <Label labelFor="idEmailCreateText" text="{i18n>emailColumnTitle}" showColon="true" />
                <Input type="Email" value="{createStory>/Email}" id='idEmailCreateText' />
                <Label labelFor="idPhoneNumberCreateText" text="{i18n>phoneColumnTitle}" showColon="true" />
                <Input type="Tel" id='idPhoneNumberCreateText' value="{createStory>/PhoneNumber}" />
                <Label labelFor="idFloorAreaCreateText" text="{i18n>floorArea}" showColon="true" />
                <Input id='idFloorAreaCreateText' value="{createStory>/FloorArea}"/>
                <Label labelFor="idAddressCreateText" text="{i18n>addressColumnTitle}" showColon="true" />
                <Input id='idAddressCreateText' value="{createStory>/Address}"/>
            </forms:SimpleForm>
        </content>
        <beginButton>
            <Button text="Create" press="onCreateButtonPress"></Button>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelButtonPress" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>